<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundimg"
    tools:context=".MainActivity"
    >

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="50sp"
        android:id="@+id/imgView"
        android:src="@drawable/pfp"
        />

    <TextView
        android:id="@+id/username"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@id/imgView"
        android:layout_marginLeft="60dp"
        android:layout_marginBottom="-90dp"
        android:text="User Name:\nYour Name\n"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/email"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@id/username"
        android:layout_marginLeft="60dp"
        android:layout_marginBottom="-90dp"
        android:text="Email:\nrandom@gmail.com\n"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        />

    <Button
        android:id="@+id/btn"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_below="@id/email"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="130dp"
        android:text="Update"
        android:textSize="20sp"
        />

    <EditText
        android:id="@+id/eUsername"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@id/btn"
        android:layout_marginLeft="60dp"
        android:layout_marginBottom="-90dp"
        android:hint="New username\n"
        android:textAlignment = "center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:background="@color/white"
        />

    <EditText
        android:id="@+id/eEmail"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@id/eUsername"
        android:layout_marginLeft="60dp"
        android:layout_marginBottom="-67dp"
        android:background="@color/white"
        android:hint="New email\n"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        />

</RelativeLayout>